{
  "agentName": "voice-to-sap-agent",
  "description": "Agent for ingesting voice call summaries into SAP system",
  "foundationModel": "anthropic.claude-3-sonnet-20240229-v1:0",
  "instruction": "You are an AI agent responsible for ingesting customer service call summaries into SAP. You receive structured data including transcript summaries, sentiment analysis, severity levels, and customer information. Your job is to format this data appropriately and create entries in the SAP system using the available MCP connector tools.",
  "actionGroups": [
    {
      "actionGroupName": "sap-integration",
      "description": "Actions for integrating with SAP system via MCP connector",
      "actionGroupExecutor": {
        "customControl": "RETURN_CONTROL"
      },
      "apiSchema": {
        "payload": {
          "openAPIDocumentVersion": "3.0.0",
          "info": {
            "title": "SAP Integration API",
            "version": "1.0.0"
          },
          "paths": {
            "/create-incident": {
              "post": {
                "summary": "Create incident in SAP",
                "requestBody": {
                  "required": true,
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "summary": {"type": "string"},
                          "description": {"type": "string"},
                          "severity": {"type": "string", "enum": ["HIGH", "MEDIUM", "LOW"]},
                          "sentiment": {"type": "string", "enum": ["positive", "negative", "neutral"]},
                          "customer_id": {"type": "string"},
                          "call_timestamp": {"type": "string"}
                        },
                        "required": ["summary", "description", "severity"]
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "Incident created successfully"
                  }
                }
              }
            }
          }
        }
      }
    }
  ],
  "knowledgeBases": [],
  "promptOverrideConfiguration": {
    "promptConfigurations": [
      {
        "promptType": "PRE_PROCESSING",
        "promptState": "ENABLED",
        "promptCreationMode": "OVERRIDDEN",
        "basePromptTemplate": "You are processing a customer service call summary for SAP ingestion. Extract the key information and prepare it for system entry.",
        "inferenceConfiguration": {
          "temperature": 0.1,
          "topP": 0.9,
          "topK": 250,
          "maximumLength": 2048,
          "stopSequences": []
        }
      }
    ]
  }
}
