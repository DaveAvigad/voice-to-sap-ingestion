{
  "widgets": [
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/States", "ExecutionsSucceeded", "StateMachineArn", "arn:aws:states:REGION:ACCOUNT:stateMachine:VoiceToSapStateMachine"],
          [".", "ExecutionsFailed", ".", "."],
          [".", "ExecutionsStarted", ".", "."]
        ],
        "period": 300,
        "stat": "Sum",
        "region": "us-east-1",
        "title": "Step Functions Executions"
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/Lambda", "Duration", "FunctionName", "VoiceToSapStack-SeverityAssignmentFunction"],
          [".", "Errors", ".", "."],
          [".", "Invocations", ".", "."]
        ],
        "period": 300,
        "stat": "Average",
        "region": "us-east-1",
        "title": "Lambda Function Performance"
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/S3", "NumberOfObjects", "BucketName", "voice-to-sap-input", "StorageType", "AllStorageTypes"],
          [".", ".", ".", "voice-to-sap-summaries", ".", "."]
        ],
        "period": 3600,
        "stat": "Average",
        "region": "us-east-1",
        "title": "S3 Bucket Objects"
      }
    },
    {
      "type": "log",
      "properties": {
        "query": "SOURCE '/aws/lambda/VoiceToSapStack-SeverityAssignmentFunction' | fields @timestamp, @message\n| filter @message like /ERROR/\n| sort @timestamp desc\n| limit 20",
        "region": "us-east-1",
        "title": "Lambda Errors",
        "view": "table"
      }
    }
  ]
}
